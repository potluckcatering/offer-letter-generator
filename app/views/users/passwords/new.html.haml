.card.card-session-new.mx-auto
  .card-body
    / = render 'layouts/close_card'
    .text-center
      = image_tag('potluck-logo', class: 'contract-logo mb-2')
      %h3.font-weight-light Reset Password
    = render 'layouts/flash'
    = simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f|
      = f.error_notification
      .form-inputs
        = f.input :email, required: true, autofocus: true
      .form-actions
        = f.button :submit, "Send me reset password instructions", class: "btn-primary btn-block"
    / = render "users/shared/links"
